
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookDatabase</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookDatabase.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookDatabase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="home-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <a id="books-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                            }
                            else
                            {
                                <a id="books-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Account" asp-action="LogIn">Books</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a id="privacy-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        <li class="nav-item">
                            <a id="signup-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Account" asp-action="SignUp">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a id="login-button" class="nav-link text-dark shiny-button" asp-area="" asp-controller="Account" asp-action="LogIn">Log In</a>
                        </li>
                        <li>
                            <div class="position-relative">
                                <img id="accountMenuButton" src="~/Images/AnonymousProfilePicture.jpg" width="65px;" style="cursor:pointer;"/>
                                <img id="darkModeToggle" src="~/Images/DarkModeToggleImg.png" width="65px;" style="cursor:pointer;"/>

                                <div id="account-loggedin-dropdown-menu" class="card p-3 d-none position-absolute" style="top: 100px; right: 0; z-index: 1000; width: 200px;">

                                    <h6 class="mb-2">Hello, @User.Identity?.Name</h6>
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="nav-link btn btn-link" style="color: deepskyblue; text-decoration: underline;">Logout</button>
                                        </form>
                                    </div>
                                </div>
                                <div id="account-loggedout-dropdown-menu" class="card p-3 d-none position-absolute" style="top: 100px; right: 0; z-index: 1000; width: 200px;">

                                    <h6 class="mb-2">No account found</h6>
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <p>Try <a style="color: deepskyblue; text-decoration: underline;" asp-area="" asp-controller="Account" asp-action="LogIn">Logging In</a></p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookDatabase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

<script>
    const isAuthenticated = @User.Identity!.IsAuthenticated.ToString().ToLower();

    const accountMenu = document.getElementById("accountMenuButton");
    const darkModeButton = document.getElementById("darkModeToggle");
    let isRotated = false

    const loggedInDropdownMenu = document.getElementById("account-loggedin-dropdown-menu");
    const loggedOutDropdownMenu = document.getElementById("account-loggedout-dropdown-menu");

    const shinyButtons = document.getElementsByClassName("shiny-button");

    window.addEventListener('DOMContentLoaded', () => {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-mode');
        }
    })

    accountMenu.addEventListener("click", () => {
        if (isAuthenticated) {
            loggedInDropdownMenu.classList.toggle('d-none');
        } else {
            loggedOutDropdownMenu.classList.toggle('d-none');
        }
    })

    darkModeButton.addEventListener("click", () => {
        isRotated = !isRotated;
        darkModeButton.style.transition = 'transform 0.5s ease-in-out';
        darkModeButton.style.transform = isRotated ? 'rotate(180deg)' : 'rotate(0deg)';

        document.body.classList.toggle('dark-mode');

        // Optional: persist preference to localStorage
        if (document.body.classList.contains('dark-mode')) {
            localStorage.setItem('theme', 'dark');
        } else {
            localStorage.setItem('theme', 'light');
        }
    })

    Array.from(shinyButtons).forEach((button) => {
        button.addEventListener("mouseover", () => {
            button.classList.remove("text-dark");
            button.style.color = 'deepskyblue';
            button.style.textDecoration = 'underline';
        })
        button.addEventListener("mouseout", () => {
            button.classList.add("text-dark");
            button.style.textDecoration = '';
        })
    })

</script>